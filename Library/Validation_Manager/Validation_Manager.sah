/**
* Function is for Validation manager execution.
*@Author: Omprakash.v
*/
function Validation_Manager_Execution()
{
	NavigateTo_Validation_Manager($groupName);
	_click(_button($ValidationRules));
	_setSelected(_select("groupID"),$groupName);
	if(_exists(_image($ExecuteNow,_near(_cell($groupName))))){
		_click(_image($ExecuteNow));
		_wait(10000);
		var $i=0;
		while(i<10)
		{
			_wait(10000);
			if(_exists(_image("spin.gif"))){
				_log("Validation Execution in progress");
			}
			else{
				_log("Validation execution Successfully Completed");
				break;
			}
			$i++;
		}
		
		NavigateTo_Validation_Manager($groupName);
		_click(_button($ValidationRules));
		
		if(_exists(_image("glass_red.gif"))){
			_log("validation manager execution Failed");
			_assertTrue(false);
		}
		else{
			_log("validation manager execution passed successfully");
		}
	}
}

