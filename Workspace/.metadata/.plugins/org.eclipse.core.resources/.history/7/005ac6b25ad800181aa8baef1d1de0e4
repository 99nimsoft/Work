class mahList{
	
	Object[] arr;
	int size;
	
	mahList(){
		arr = new Object[3];
	}
	
	void add(Object obj){
		validateCapacity(size+1);
		arr[size++]=obj;
	}
	
	void validateCapacity(int z){
		if(z>=arr.length){
			int tmp = ((arr.length*3)/2)+1;
			arr=new Object[tmp];
			
		}
	}
	
	Object get(int i){
		return arr[i];
	}
}